<Window x:Class="CAR_RENTAL.Views.Admin.EditPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENTAL.Views.Admin"
        mc:Ignorable="d"
        Title="EditPassword" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="359*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="117*"/>
                <RowDefinition Height="52*"/>
                <RowDefinition Height="190*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="91*"/>
                <ColumnDefinition Width="159*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Current Password" HorizontalAlignment="Center" Margin="0,76,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="182" HorizontalContentAlignment="Right"/>
            <Label Content="New Password" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="31" Width="182" HorizontalContentAlignment="Right" Grid.Row="1"/>
            <Label Content="Confirm new Password" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="16" Height="31" Width="182" HorizontalContentAlignment="Right" Grid.Row="2"/>
            <PasswordBox x:Name="inputOldPassword" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,76,0,0" VerticalAlignment="Top" Width="227" Height="31"/>
            <PasswordBox x:Name="inputNewPassword" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="227" Height="31" Grid.Row="1"/>
            <PasswordBox x:Name="inputReNewPassword" Grid.Column="1" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="227" Height="31" Grid.Row="2"/>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Confirm" Margin="118,10,22,19" FontSize="16" Click="UpdatePassword"/>
            <Button Content="Cancel" Margin="22,10,118,19" FontSize="16" Grid.Column="1" Click="CancelChangePassword"/>

        </Grid>
    </Grid>
</Window>
