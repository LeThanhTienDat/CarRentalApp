<UserControl x:Class="CAR_RENTAL.Views.Category.Category"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAR_RENTAL.Views.Category"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
                Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="134*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="0,0,236,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="20*"/>
                    <RowDefinition Height="29*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"/>
                    <ColumnDefinition Width="61*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Title" HorizontalAlignment="Center" VerticalAlignment="Top" Width="80" HorizontalContentAlignment="Right" FontSize="16" Height="32" Margin="0,11,0,0"/>
                <Label Content="Active" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Right" FontSize="16" Height="32" Grid.Row="1"/>
                <CheckBox x:Name="inputActive" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="11,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="16" Width="20"/>
                <TextBox x:Name="inputTitle" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Height="28" FontSize="16" Margin="0,11,0,0"/>
                <Button Content="Add" HorizontalAlignment="Left" Margin="8,0,0,0" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Height="26" Width="64" FontSize="16" Click="btnAddCategory"/>

            </Grid>
            <Grid Grid.ColumnSpan="2" Margin="369,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="49*"/>
                    <ColumnDefinition Width="489*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Description" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="31"/>
                <TextBox x:Name="inputDescription" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="488" Height="101" FontSize="16"/>

            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="57*"/>
                <RowDefinition Height="479*"/>
            </Grid.RowDefinitions>
            <Grid Height="54" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="133*"/>
                    <ColumnDefinition Width="247*"/>
                    <ColumnDefinition Width="115*"/>
                    <ColumnDefinition Width="245*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="1" Content="Title" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="112" HorizontalContentAlignment="Center" Height="32"/>
                <Label Content="No." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="40" HorizontalContentAlignment="Center" Height="32"/>
                <Label Content="Description" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="226" HorizontalContentAlignment="Center" Grid.Column="2" Height="32"/>
                <Label Grid.Column="4" Content="Action" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="225" HorizontalContentAlignment="Center" Height="32"/>
                <Label Grid.Column="3" Content="Active" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="95" HorizontalContentAlignment="Center" Height="32"/>



            </Grid>
            <ScrollViewer   VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto" Margin="0,0,-10,0" Grid.Row="1">
                <Grid Grid.Row="1" x:Name="Cates">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="133*"/>
                        <ColumnDefinition Width="247*"/>
                        <ColumnDefinition Width="115*"/>
                        <ColumnDefinition Width="245*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Grid.Row="1" Background="#FFFAFBFC" VerticalAlignment="Top">
                        <TextBlock TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1" Background="#FFFAFBFC" VerticalAlignment="Top">
                        <TextBlock TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="1" Background="#FFFAFBFC" VerticalAlignment="Top">
                        <TextBlock TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="3" Grid.Row="1" Background="#FFFAFBFC" VerticalAlignment="Top">
                        <TextBlock TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="1" Background="#FFFAFBFC" VerticalAlignment="Top">
                        <TextBlock TextWrapping="Wrap" FontSize="16" HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </ScrollViewer>

        </Grid>

    </Grid>
</UserControl>
