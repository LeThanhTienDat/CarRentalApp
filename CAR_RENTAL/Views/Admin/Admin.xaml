<UserControl x:Class="CAR_RENTAL.Views.Admin.Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAR_RENTAL.Views.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="244*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" 
                BorderBrush="Gray" 
                BorderThickness="2" 
                CornerRadius="8" 
                Margin="2" 
                Padding="5">
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="49*"/>
                    <RowDefinition Height="49*"/>
                    <RowDefinition Height="49*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="194*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="153*"/>
                    <ColumnDefinition Width="371*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Name" Margin="10,0,10,0" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right"/>
                <TextBlock x:Name="showName" Grid.Column="1" HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" FontSize="16" Height="30"/>
                <Label Content="Email" Margin="10,0,10,0" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="1"/>
                <TextBlock x:Name="showEmail" Grid.Column="1" HorizontalAlignment="Left" Margin="10,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" FontSize="16" Height="30" Grid.Row="1"/>
                <Label Content="Password" Margin="10,0,10,0" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="3"/>
                <Button Content="Edit Profile" Margin="10,0,0,130" Grid.Column="1" Grid.Row="4" FontSize="16" Click="UpdateProfile" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="131"/>
                <Button Content="Change Password" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center" Grid.Column="1" FontSize="16" Width="169" Height="30" Click="ChangePassword"/>
                <Label Content="Phone" Margin="10,0,10,0" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="2"/>
                <TextBlock x:Name="showPhone" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="245" FontSize="16" Height="30" Grid.Row="2"/>

            </Grid>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" 
                BorderBrush="Gray" 
                BorderThickness="2" 
                CornerRadius="8" 
                Margin="2" 
                Padding="5">
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48*"/>
                    <RowDefinition Height="48*"/>
                    <RowDefinition Height="48*"/>
                    <RowDefinition Height="48*"/>
                    <RowDefinition Height="44*"/>
                    <RowDefinition Height="155*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="79*"/>
                    <ColumnDefinition Width="409*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Name" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" Height="32"/>
                <Label Content="Password" Margin="10,6,0,0" VerticalAlignment="Top" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="2"/>
                <Label Content="Email" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="1"/>
                <Label Content="Confirm Password" Margin="10,6,0,0" VerticalAlignment="Top" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="3"/>
                <Label Content="Phone" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="4"/>
                <CheckBox x:Name="inputActive" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,18,0,0" Grid.Row="5" VerticalAlignment="Top"/>
                <Button x:Name="btnCreateAdmin" IsEnabled="false" Content="Add new" Margin="10,46,0,0" Grid.Column="1" Grid.Row="5" FontSize="16" Click="CreateAdmin" Height="36" VerticalAlignment="Top" HorizontalAlignment="Left" Width="129"/>
                <TextBox x:Name="inputName" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="203" FontSize="16" Height="26"/>
                <TextBox x:Name="inputEmail" Grid.Column="1" HorizontalAlignment="Left" Margin="10,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" FontSize="16" Height="26" Grid.Row="1"/>
                <TextBox x:Name="inputPassword" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="203" FontSize="16" Height="26" Grid.Row="2"/>
                <TextBox x:Name="inputConfirmPassword" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="203" FontSize="16" Height="26" Grid.Row="3"/>
                <Label Content="Active" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="5"/>
                <TextBox x:Name="inputPhone" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="203" FontSize="16" Height="26" Grid.Row="4"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>
