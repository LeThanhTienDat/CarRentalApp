<Window x:Class="CAR_RENTAL.Views.Car.CarEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENTAL.Views.Car"
        mc:Ignorable="d"
        Title="CarEdit" Height="400" Width="1400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="66.04"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,-4,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="68*"/>
                    <RowDefinition Height="75*"/>
                    <RowDefinition Height="174*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="117*"/>
                    <ColumnDefinition Width="246*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="246*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="248*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="247*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Brand" HorizontalAlignment="Center" VerticalAlignment="Top" Width="116" FontSize="16" HorizontalContentAlignment="Right" Height="31" Margin="0,3,0,0"/>
                <Label Content="Model" HorizontalAlignment="Center" VerticalAlignment="Top" Width="116" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Row="1"/>
                <Label Content="License plate" HorizontalAlignment="Center" VerticalAlignment="Top" Width="116" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="2" Height="31" Margin="0,1,0,0"/>
                <Label Content="Status" HorizontalAlignment="Center" VerticalAlignment="Top" Width="94" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Margin="0,3,0,0"/>
                <Label Content="Seat count" HorizontalAlignment="Center" VerticalAlignment="Top" Width="94" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Grid.Row="1"/>
                <Label Content="Color" HorizontalAlignment="Center" VerticalAlignment="Top" Width="94" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Grid.Row="2" Margin="0,1,0,0"/>
                <TextBox x:Name="editBrand" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="30" Margin="11,10,0,0"/>
                <TextBox x:Name="editModel" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="1"/>
                <TextBox x:Name="editLicensePlate" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="2"/>
                <TextBox x:Name="editSeatCount" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="1"/>
                <TextBox x:Name="editColor" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="2"/>
                <Label Content="Category" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="3" Margin="242,3,0,0" Grid.ColumnSpan="2"/>
                <Label Content="Car type" HorizontalAlignment="Center" VerticalAlignment="Top" Width="95" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="4" Grid.Row="1"/>
                <Label Content="Price / Day" HorizontalAlignment="Left" VerticalAlignment="Top" Width="93" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="4" Margin="2,1,0,0" Grid.Row="2"/>
                <TextBox x:Name="editPricePerDay" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="2"/>
                <Label Content="Image" HorizontalAlignment="Center" VerticalAlignment="Center" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="30" Grid.Column="6"/>
                <Button Grid.Column="7" Content="Upload" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="16" Width="99" Click="ChangeCarImg" Height="26"/>
                <Image x:Name="editCarImg" Grid.Column="6" HorizontalAlignment="Left" Height="182" Margin="25,0,0,0" VerticalAlignment="Top" Width="276" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1"/>
                <ComboBox x:Name="editCbCarType" Grid.Column="5" FontSize="16" HorizontalAlignment="Center" Margin="0,6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="228" Height="25"/>
                <ComboBox x:Name="editCbStatusList" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="225" Height="30" FontSize="16" SelectedIndex="0" Margin="9,10,0,0">
                    <ComboBoxItem Content="Waiting"/>
                    <ComboBoxItem Content="Booked"/>
                    <ComboBoxItem Content="Maintain"/>
                </ComboBox>
                <ComboBox x:Name="editCbCateList" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Top" Width="225" Height="28" FontSize="16" Margin="0,10,0,0"/>
                <Label Content="Active" HorizontalAlignment="Center" Margin="0,65,0,0" Grid.Row="2" VerticalAlignment="Top" Width="118" FontSize="16" HorizontalContentAlignment="Right"/>
                <CheckBox x:Name="editActive" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="11,73,0,0" Grid.Row="2" VerticalAlignment="Top"/>




            </Grid>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500*"/>
                <ColumnDefinition Width="201*"/>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="500*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Save Edit" Grid.Column="1" FontSize="16" Margin="47,10,53,10" Click="btnSaveEditCar"/>
            <Button Content="Cancel" Grid.Column="2" FontSize="16" Margin="50,10,49,10" Click="btnCancelEditCar"/>
        </Grid>
    </Grid>
</Window>
