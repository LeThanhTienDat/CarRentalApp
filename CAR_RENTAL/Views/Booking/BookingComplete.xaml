<Window x:Class="CAR_RENTAL.Views.Booking.BookingComplete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENTAL.Views.Booking"
        mc:Ignorable="d"
        Title="BookingComplete" Height="450" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="190*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Margin="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="218*"/>
                <ColumnDefinition Width="183*"/>
                <ColumnDefinition Width="183*"/>
                <ColumnDefinition Width="216*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnSaveComplete" Grid.Column="1" Content="Complete Booking" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Height="43" Width="168" Click="SaveComplete"/>
            <Button x:Name="btnSaveComplete_Copy" Grid.Column="2" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Height="43" Width="156" Margin="10,0,0,0" Click="CancelComplete"/>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="51*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="26*"/>
                    <RowDefinition Height="33*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="144*"/>
                    <ColumnDefinition Width="223*"/>
                    <ColumnDefinition Width="145*"/>
                    <ColumnDefinition Width="223*"/>
                    <ColumnDefinition Width="144*"/>
                    <ColumnDefinition Width="222*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Customer Name" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Height="31"/>
                <Label Content="Id Card Number" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="1"/>
                <Label Content="Booking Id" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="2" Height="31"/>
                <Label Content="Booking Date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="2" Grid.Row="1" Height="32"/>
                <Label Content="Discount (%)" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="2" Grid.Row="2" Height="32"/>
                <Label Content="Deposit Cash" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="2" Grid.Row="4" Height="32"/>
                <Label Content="Deposit (%)" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="2" Grid.Row="3" Height="32"/>
                <Label Content="Deposit Paid" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="2" Grid.Row="5" Height="32"/>
                <TextBlock x:Name="showName" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23"/>
                <TextBlock x:Name="showIdCardNumber" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Row="1"/>
                <TextBlock x:Name="showBookingId" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="203" Height="23"/>
                <TextBlock x:Name="showBookingDate" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Row="1"/>
                <TextBlock x:Name="showDiscount" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Row="2"/>
                <TextBlock x:Name="showDeposit" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Row="3"/>
                <TextBlock x:Name="showDepositCash" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Row="4"/>
                <CheckBox x:Name="showDepositCashHasPaid" Grid.Column="3" Content="" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="5" VerticalAlignment="Center" Height="15" Width="20"/>
                <Label Content="Total Price" HorizontalAlignment="Left" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="3" Height="31" Grid.ColumnSpan="2" Margin="222,0,0,0"/>
                <Label Content="Fine" HorizontalAlignment="Left" VerticalAlignment="Top" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="3" Height="31" Grid.ColumnSpan="2" Margin="222,32,0,0" Grid.RowSpan="2"/>
                <Label Content="Refund" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="4" Height="31" Grid.Row="2"/>
                <Label Content="Car Amount" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="2"/>
                <Label Content="Car Return Late" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="3"/>
                <Label Content="Remain Cash" HorizontalAlignment="Center" VerticalAlignment="Center" Width="144" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="4" Height="31" Grid.Row="3"/>
                <Label Content="Confirm Payment" HorizontalAlignment="Center" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="4" Height="31" Grid.Row="5"/>
                <CheckBox x:Name="inputPaymentConfirm" Grid.Column="5" Content="" HorizontalAlignment="Left" Margin="10,7,0,0" Grid.Row="5" VerticalAlignment="Top" Height="15" Width="20"/>
                <TextBlock x:Name="showTotalPrice" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="203" Height="23"/>
                <TextBlock x:Name="showFine" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="203" Height="23" Grid.Row="1"/>
                <TextBlock x:Name="showRefund" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="203" Height="23" Grid.Row="2"/>
                <TextBlock x:Name="showRemainCash" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="203" Height="23" Grid.Row="3"/>
                <TextBlock x:Name="showCarAmount" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Row="2" Margin="10,0,0,0"/>
                <TextBlock x:Name="showCarReturnLate" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Row="3" Margin="10,0,0,0"/>
                <Label Content="Return Soon" HorizontalAlignment="Center" VerticalAlignment="Center" Width="144" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="4"/>
                <Label Content="Return On Time" HorizontalAlignment="Center" VerticalAlignment="Center" Width="144" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="5"/>
                <TextBlock x:Name="showCarReturnOnTime" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Column="1" Margin="10,0,0,0" Grid.Row="5"/>
                <TextBlock x:Name="showCarReturnSoon" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="200" Height="23" Grid.Column="1" Margin="10,0,0,0" Grid.Row="4"/>
                <Label Content="Soon" Background="#FFFFE0" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="7" VerticalAlignment="Center" Width="60" HorizontalContentAlignment="Center"/>
                <Label Content="On Time" Background="#DFFFD6" HorizontalAlignment="Left" Margin="72,0,0,0" Grid.Row="7" VerticalAlignment="Center" Width="60" HorizontalContentAlignment="Center"/>
                <Label Content="Late" Background="#FFC0CB" HorizontalAlignment="Left" Grid.Row="7" VerticalAlignment="Center" Width="60" HorizontalContentAlignment="Center" Grid.Column="1"/>
                <Label Content="Total must pay" HorizontalAlignment="Center" VerticalAlignment="Top" Width="142" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="4" Height="31" Grid.Row="3" Margin="0,32,0,0" Grid.RowSpan="2"/>
                <TextBlock x:Name="showTotalMustPay" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Width="203" Height="23" Grid.Row="4" Margin="0,3,0,0"/>

            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="31*"/>
                    <RowDefinition Height="94*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95*"/>
                        <ColumnDefinition Width="137*"/>
                        <ColumnDefinition Width="79*"/>
                        <ColumnDefinition Width="116*"/>
                        <ColumnDefinition Width="115*"/>
                        <ColumnDefinition Width="106*"/>
                        <ColumnDefinition Width="85*"/>
                        <ColumnDefinition Width="127*"/>
                        <ColumnDefinition Width="115*"/>
                        <ColumnDefinition Width="110*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="License plate" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" Height="26"/>
                    <Label Content="Model" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" Height="26" Grid.Column="1"/>
                    <Label Content="Seat" HorizontalAlignment="Center" VerticalAlignment="Center" Width="56" HorizontalContentAlignment="Center" Height="26" Grid.Column="2"/>
                    <Label Content="Start Date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" Height="26" Grid.Column="3"/>
                    <Label Content="End Date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" Height="26" Grid.Column="4"/>
                    <Label Content="Return Date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="74" HorizontalContentAlignment="Center" Height="26" Grid.Column="5"/>
                    <Label Content="Return ?" HorizontalAlignment="Center" VerticalAlignment="Center" Width="58" HorizontalContentAlignment="Center" Height="26" Grid.Column="6"/>
                    <Label Content="Total Price/Car" HorizontalAlignment="Center" VerticalAlignment="Center" Width="92" HorizontalContentAlignment="Center" Height="26" Grid.Column="7"/>
                    <Label Content="Fine" HorizontalAlignment="Center" VerticalAlignment="Center" Width="92" HorizontalContentAlignment="Center" Height="26" Grid.Column="8"/>
                    <Label Content="Refund" HorizontalAlignment="Left" VerticalAlignment="Center" Width="92" HorizontalContentAlignment="Center" Height="26" Grid.Column="9" Margin="8,0,0,0"/>
                </Grid>
                <ScrollViewer   VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Grid.Row="1">
                    <Grid Grid.Row="1" x:Name="Cars">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95*"/>
                            <ColumnDefinition Width="137*"/>
                            <ColumnDefinition Width="79*"/>
                            <ColumnDefinition Width="107*"/>
                            <ColumnDefinition Width="109*"/>
                            <ColumnDefinition Width="112*"/>
                            <ColumnDefinition Width="94*"/>
                            <ColumnDefinition Width="127*"/>
                            <ColumnDefinition Width="115*"/>
                            <ColumnDefinition Width="126*"/>
                        </Grid.ColumnDefinitions>


                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>



    </Grid>
</Window>
