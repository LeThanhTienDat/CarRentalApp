<UserControl x:Class="CAR_RENTAL.Views.Booking.Booking"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAR_RENTAL.Views.Booking"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="357*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="411*"/>
                <RowDefinition Height="289*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    BorderBrush="Gray" 
                    BorderThickness="2" 
                    CornerRadius="8" 
                    Margin="2" 
                    Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32*"/>
                        <ColumnDefinition Width="85*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="44*"/>
                            <RowDefinition Height="349*"/>
                        </Grid.RowDefinitions>
                        <Label Content="ID or Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="94" FontSize="16" HorizontalContentAlignment="Right" Margin="0,3,0,0" Height="31"/>
                        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" FontSize="16" Height="30" Margin="94,3,0,0" TextChanged="CusIdChange"/>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34*"/>
                                <RowDefinition Height="315*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="101*"/>
                                    <ColumnDefinition Width="113*"/>
                                    <ColumnDefinition Width="74*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="ID Number" HorizontalAlignment="Center" VerticalAlignment="Center" Width="101" HorizontalContentAlignment="Center" FontSize="16"/>
                                <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center" Width="111" HorizontalContentAlignment="Center" FontSize="16" Grid.Column="1"/>

                            </Grid>
                            <ScrollViewer   VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Auto"
                                            Grid.Row="1">
                                <Grid Grid.Row="1" x:Name="Customers">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="101*"/>
                                        <ColumnDefinition Width="113*"/>
                                        <ColumnDefinition Width="74*"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="71*"/>
                            <RowDefinition Height="60*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="31*"/>
                                <RowDefinition Height="33*"/>
                                <RowDefinition Height="37*"/>
                                <RowDefinition Height="32*"/>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="40*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="99*"/>
                                <ColumnDefinition Width="146*"/>
                                <ColumnDefinition Width="90*"/>
                                <ColumnDefinition Width="181*"/>
                                <ColumnDefinition Width="107*"/>
                                <ColumnDefinition Width="142*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Customer ID" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" Margin="0,0,1,0"/>
                            <TextBlock x:Name="showIdCus" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="26" Width="128" FontSize="16" TextAlignment="Center"/>
                            <Label Content="Name" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" Margin="0,0,0,1" Grid.Row="1"/>
                            <Label Content="End Date" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" Margin="1,1,0,1" Grid.Column="4" Grid.Row="1"/>
                            <DatePicker x:Name="inputStartDate" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="132" Height="24" SelectedDateChanged="changeDate"/>
                            <DatePicker x:Name="inputEndDate" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="132" Grid.Row="1" Height="24" SelectedDateChanged="changeDate"/>
                            <TextBlock x:Name="showName" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="26" Width="128" FontSize="16" TextAlignment="Center" Grid.Row="1"/>
                            <Label Content="Payment" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" Grid.Row="2" Margin="0,0,1,1"/>
                            <ComboBox x:Name="inputPayment" HorizontalAlignment="Center" VerticalAlignment="Center" Width="136" FontSize="16" Height="26" Grid.Row="2" Grid.Column="1" SelectionChanged="PaymentChange"/>
                            <Label Content="Discount(%)" Width="98" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Center" Grid.Row="5" Height="38" VerticalAlignment="Top"/>
                            <TextBox x:Name="inputDeposit" PreviewTextInput="IntegerAndLimitInput" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="136" FontSize="16" Height="26"/>
                            <Label Grid.Column="2" Content="Car Model" HorizontalAlignment="Center" VerticalAlignment="Center" Width="88" FontSize="16" Height="32" HorizontalContentAlignment="Right"/>
                            <TextBlock x:Name="showModel" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="26" Width="181" FontSize="16" TextAlignment="Center"/>
                            <Label Grid.Column="2" Content="Seat count" HorizontalAlignment="Center" VerticalAlignment="Center" Width="90" FontSize="16" Height="32" HorizontalContentAlignment="Right" Grid.Row="1"/>
                            <TextBlock x:Name="showSeatCount" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="26" Width="182" FontSize="16" TextAlignment="Center" Grid.Row="1"/>
                            <Label Grid.Column="2" Content="Price/Day" HorizontalAlignment="Center" VerticalAlignment="Center" Width="88" FontSize="16" Height="34" Grid.Row="2" HorizontalContentAlignment="Right"/>
                            <TextBlock x:Name="showPricePerDay" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="181" FontSize="16" TextAlignment="Center" Grid.Row="2" Margin="0,4,0,0"/>
                            <Label Content="Start Date" Width="106" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,1" Grid.Column="4"/>
                            <Label Content="Deposit (%)" Width="98" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Margin="0,0,0,2"/>
                            <TextBox x:Name="inputDiscount" PreviewTextInput="IntegerAndLimitInput" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="5" TextWrapping="Wrap" VerticalAlignment="Center" Width="136" FontSize="16" Height="26"/>
                            <Label Content="Return Date" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" Grid.Column="4" Grid.Row="2" Margin="0,0,0,1"/>
                            <DatePicker x:Name="inputReturnDate" IsEnabled="false" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" Width="132" Grid.Row="2" Height="24"/>
                            <Label Grid.Column="1" Content="Paid Deposit" HorizontalAlignment="Left" VerticalAlignment="Center" Width="114" FontSize="16" Height="38" Grid.Row="5" HorizontalContentAlignment="Right" Grid.ColumnSpan="3" Margin="127,0,0,0"/>
                            <CheckBox x:Name="inputDepositHasPaid" IsEnabled="false" Grid.Column="3" Content="" HorizontalAlignment="Left" Margin="23,10,0,0" Grid.Row="5" VerticalAlignment="Top" Height="15" Width="20"/>
                            <Button x:Name="btnPlanCar" Grid.Column="5" Content="Plan car" IsEnabled="False" HorizontalAlignment="Left" Margin="60,6,0,0" Grid.Row="5" VerticalAlignment="Top" Width="72" FontSize="16" Click="PlanCar" Height="25"/>
                            <Label Grid.Column="2" Content="Total /Car" HorizontalAlignment="Center" VerticalAlignment="Center" Width="88" FontSize="16" Height="32" Grid.Row="3" HorizontalContentAlignment="Right"/>
                            <TextBlock x:Name="showTotalPerCar" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="180" FontSize="16" TextAlignment="Center" Margin="0,5,0,0" Grid.Row="3"/>
                            <Label Grid.Column="4" Content="Total Days" HorizontalAlignment="Center" VerticalAlignment="Center" Width="107" FontSize="16" Height="32" Grid.Row="3" HorizontalContentAlignment="Right"/>
                            <TextBlock x:Name="showTotalDay" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="26" Width="132" FontSize="16" TextAlignment="Center" Grid.Column="5" Grid.Row="3"/>
                            <Button x:Name="btnSaveBookingUpdate" IsEnabled="False" Grid.Column="4" Content="Save booking" HorizontalAlignment="Left" Margin="54,6,0,0" Grid.Row="5" VerticalAlignment="Top" Width="106" FontSize="16" Click="SaveBookingUpdate" Grid.ColumnSpan="2" Height="25"/>
                            <Button x:Name="btnSaveCarUpdate" IsEnabled="False" Grid.Column="3" Content="Save Car" HorizontalAlignment="Left" Margin="146,5,0,0" Grid.Row="5" VerticalAlignment="Top" Width="70" FontSize="16" Click="SaveCarUpdate" Grid.ColumnSpan="2" Height="25"/>
                            <Button x:Name="btnCancelSaveCarUpdate" IsEnabled="False" Grid.Column="3" Content="Cancel" HorizontalAlignment="Left" Margin="66,5,0,0" Grid.Row="5" VerticalAlignment="Top" Width="75" FontSize="16" Click="CancelSaveCarUpdate" Height="25"/>
                            <Label Content="Deposit cash" Width="111" HorizontalContentAlignment="Right" FontSize="16" VerticalContentAlignment="Center" HorizontalAlignment="Left" Grid.Row="4" Height="38" VerticalAlignment="Center" Margin="-12,0,0,0"/>
                            <TextBox x:Name="inputDepositCash" PreviewTextInput="OnlyIntegerInput" IsEnabled="false" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center" Width="136" FontSize="16" Height="26"/>
                            <Label Grid.Column="2" Content="Total paid" HorizontalAlignment="Center" VerticalAlignment="Center" Width="88" FontSize="16" Height="38" Grid.Row="4" HorizontalContentAlignment="Right"/>
                            <TextBlock x:Name="showTotalPaid" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" Width="180" FontSize="16" TextAlignment="Center" Margin="0,4,0,0" Grid.Row="4"/>

                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="79*"/>
                                    <ColumnDefinition Width="83*"/>
                                    <ColumnDefinition Width="55*"/>
                                    <ColumnDefinition Width="81*"/>
                                    <ColumnDefinition Width="80*"/>
                                    <ColumnDefinition Width="74*"/>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="91*"/>
                                    <ColumnDefinition Width="48*"/>
                                    <ColumnDefinition Width="124*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="License plate" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" Height="26"/>
                                <Label Content="Model" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" Height="26" Grid.Column="1"/>
                                <Label Content="Seat" HorizontalAlignment="Center" VerticalAlignment="Center" Width="56" HorizontalContentAlignment="Center" Height="26" Grid.Column="2"/>
                                <Label Content="Start Date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" Height="26" Grid.Column="3"/>
                                <Label Content="End Date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" HorizontalContentAlignment="Center" Height="26" Grid.Column="4"/>
                                <Label Content="Return Date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="74" HorizontalContentAlignment="Center" Height="26" Grid.Column="5"/>
                                <Label Content="Return ?" HorizontalAlignment="Center" VerticalAlignment="Center" Width="58" HorizontalContentAlignment="Center" Height="26" Grid.Column="6"/>
                                <Label Content="Total Price/Car" HorizontalAlignment="Center" VerticalAlignment="Center" Width="92" HorizontalContentAlignment="Center" Height="26" Grid.Column="7"/>
                                <Label Content="Action" HorizontalAlignment="Center" VerticalAlignment="Center" Width="124" HorizontalContentAlignment="Center" Height="26" Grid.Column="9"/>
                                <Label Content="ID" HorizontalAlignment="Center" VerticalAlignment="Center" Width="44" HorizontalContentAlignment="Center" Height="26" Grid.Column="8"/>

                            </Grid>
                            <ScrollViewer   VerticalScrollBarVisibility="Auto"
                                            HorizontalScrollBarVisibility="Auto"
                                            Grid.Row="1">
                                <Grid Grid.Row="1" x:Name="CarsChosen">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="79*"/>
                                        <ColumnDefinition Width="83*"/>
                                        <ColumnDefinition Width="55*"/>
                                        <ColumnDefinition Width="81*"/>
                                        <ColumnDefinition Width="80*"/>
                                        <ColumnDefinition Width="74*"/>
                                        <ColumnDefinition Width="59*"/>
                                        <ColumnDefinition Width="103*"/>
                                        <ColumnDefinition Width="47*"/>
                                        <ColumnDefinition Width="107*"/>
                                    </Grid.ColumnDefinitions>


                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>


            <Border Grid.Row="1" 
                    BorderBrush="Gray" 
                    BorderThickness="2" 
                    CornerRadius="8" 
                    Margin="2" 
                    Padding="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50*"/>
                        <RowDefinition Height="219*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="98*"/>
                            <ColumnDefinition Width="40*"/>
                            <ColumnDefinition Width="79*"/>
                            <ColumnDefinition Width="161*"/>
                            <ColumnDefinition Width="675*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Search" HorizontalAlignment="Center" VerticalAlignment="Top" Width="79" Height="26" HorizontalContentAlignment="Center" Margin="0,7,0,0" Grid.Column="2"/>
                        <TextBox Grid.Column="3" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="144" TextChanged="SearchBookings" Height="23"/>
                        <Label Content="Or" HorizontalAlignment="Center" VerticalAlignment="Top" Width="38" Height="26" HorizontalContentAlignment="Center" Margin="0,8,0,0" Grid.Column="1"/>
                        <Button Content="Show All Order" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="90" Height="22" Click="btnLoadBookings"/>

                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30*"/>
                            <RowDefinition Height="191*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="42*"/>
                                <ColumnDefinition Width="120*"/>
                                <ColumnDefinition Width="99*"/>
                                <ColumnDefinition Width="126*"/>
                                <ColumnDefinition Width="124*"/>
                                <ColumnDefinition Width="123*"/>
                                <ColumnDefinition Width="126*"/>
                                <ColumnDefinition Width="73*"/>
                                <ColumnDefinition Width="220*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="No." HorizontalAlignment="Center" VerticalAlignment="Center" Width="42" Height="26" HorizontalContentAlignment="Center"/>
                            <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="26" Grid.Column="1" HorizontalContentAlignment="Center"/>
                            <Label Content="Phone" HorizontalAlignment="Center" VerticalAlignment="Center" Width="126" Height="26" Grid.Column="3" HorizontalContentAlignment="Center"/>
                            <Label Content="car amount" HorizontalAlignment="Center" VerticalAlignment="Center" Width="124" Height="26" HorizontalContentAlignment="Center" Grid.Column="4"/>
                            <Label Content="Booking date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="124" Height="26" HorizontalContentAlignment="Center" Grid.Column="5"/>
                            <Label Content="Id Card Number" HorizontalAlignment="Center" VerticalAlignment="Center" Width="99" Height="26" Grid.Column="2" HorizontalContentAlignment="Center"/>
                            <Label Content="Booking Status" HorizontalAlignment="Center" VerticalAlignment="Center" Width="126" Height="26" HorizontalContentAlignment="Center" Grid.Column="6"/>
                            <Label Content="Paid" HorizontalAlignment="Center" VerticalAlignment="Center" Width="72" Height="26" HorizontalContentAlignment="Center" Grid.Column="7"/>
                            <Label Content="Action" HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" Height="26" HorizontalContentAlignment="Center" Grid.Column="8"/>

                        </Grid>
                        <ScrollViewer   VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Auto"
                                        Grid.Row="1">
                            <Grid Grid.Row="1" x:Name="Bookings">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="42*"/>
                                    <ColumnDefinition Width="120*"/>
                                    <ColumnDefinition Width="99*"/>
                                    <ColumnDefinition Width="126*"/>
                                    <ColumnDefinition Width="124*"/>
                                    <ColumnDefinition Width="123*"/>
                                    <ColumnDefinition Width="126*"/>
                                    <ColumnDefinition Width="73*"/>
                                    <ColumnDefinition Width="220*"/>
                                </Grid.ColumnDefinitions>


                            </Grid>
                        </ScrollViewer>

                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Column="1" 
            BorderBrush="Gray" 
            BorderThickness="2" 
            CornerRadius="8" 
            Margin="2,2,2,2" 
            Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="456*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="134*"/>
                        <ColumnDefinition Width="295*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="47*"/>
                        <RowDefinition Height="79*"/>
                    </Grid.RowDefinitions>

                    <Label Content="Search by Name" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="16" 
                       Width="127" 
                       HorizontalContentAlignment="Right" 
                       Height="31"/>

                    <TextBox x:Name="inputSearchName" Grid.Column="1" 
                         HorizontalAlignment="Left" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Center" 
                         Width="205" 
                         FontSize="16" 
                         Height="27" Margin="10,0,0,0"
                         TextChanged="SearchChange"
                             />

                    <Label Content="Category" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Top" 
                       FontSize="16" 
                       Width="127" 
                       HorizontalContentAlignment="Right" 
                       Height="31" 
                       Grid.Row="1" Margin="0,2,0,0"/>

                    <ComboBox x:Name="categoryChose" Grid.Column="1" 
                          HorizontalAlignment="Left" 
                          Margin="10,6,0,0" 
                          VerticalAlignment="Top" 
                          Width="205" 
                          FontSize="16" 
                          Height="27" 
                          Grid.Row="1"
                          SelectionChanged="SelectCategoryChange"/>
                </Grid>
                <Button Content="ReFresh" HorizontalAlignment="Left" Margin="137,86,0,0" VerticalAlignment="Top" FontSize="16" Width="65"/>
                <ScrollViewer   VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Grid.Row="1">
                    <Grid Grid.Row="1" x:Name="Cars">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="163*"/>
                            <ColumnDefinition Width="133*"/>
                            <ColumnDefinition Width="109*"/>
                        </Grid.ColumnDefinitions>

                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
