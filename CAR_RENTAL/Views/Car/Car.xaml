<UserControl x:Class="CAR_RENTAL.Views.Car.Car"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAR_RENTAL.Views.Car"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="59*"/>
            <RowDefinition Height="116*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,-4,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="38*"/>
                    <RowDefinition Height="38*"/>
                    <RowDefinition Height="39*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="117*"/>
                    <ColumnDefinition Width="246*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="246*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="248*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="247*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Brand" HorizontalAlignment="Center" VerticalAlignment="Top" Width="116" FontSize="16" HorizontalContentAlignment="Right" Height="31" Margin="0,3,0,0"/>
                <Label Content="Model" HorizontalAlignment="Center" VerticalAlignment="Top" Width="116" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Row="1"/>
                <Label Content="License plate" HorizontalAlignment="Center" VerticalAlignment="Top" Width="116" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="2" Height="31" Margin="0,1,0,0"/>
                <Label Content="Status" HorizontalAlignment="Center" VerticalAlignment="Top" Width="94" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Margin="0,3,0,0"/>
                <Label Content="Seat count" HorizontalAlignment="Center" VerticalAlignment="Top" Width="94" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Grid.Row="1"/>
                <Label Content="Color" HorizontalAlignment="Center" VerticalAlignment="Top" Width="94" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Grid.Row="2" Margin="0,1,0,0"/>
                <TextBox x:Name="inputBrand" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0"/>
                <TextBox x:Name="inputModel" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="1"/>
                <TextBox x:Name="inputLicensePlate" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="2"/>
                <TextBox x:Name="inputSeatCount" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="1"/>
                <TextBox x:Name="inputColor" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="2"/>
                <Label Content="Category" HorizontalAlignment="Left" VerticalAlignment="Top" Width="99" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="3" Margin="242,3,0,0" Grid.ColumnSpan="2"/>
                <Label Content="Car type" HorizontalAlignment="Center" VerticalAlignment="Top" Width="95" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="4" Grid.Row="1"/>
                <Label Content="Price / Day" HorizontalAlignment="Center" VerticalAlignment="Top" Width="93" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="4" Margin="0,67,0,0" Grid.RowSpan="2" Grid.Row="1"/>
                <TextBox x:Name="inputPricePerDay" Grid.Column="5" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="228" FontSize="16" Height="31" Margin="0,10,0,0" Grid.Row="2"/>
                <Label Content="Image" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="6" Margin="0,10,0,0"/>
                <Button Grid.Column="7" Content="Upload" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" FontSize="16" Width="99" Click="uploadCarImg"/>
                <Image x:Name="getCarImg" Grid.Column="6" HorizontalAlignment="Left" Height="182" Margin="25,0,0,0" VerticalAlignment="Top" Width="276" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1"/>
                <ComboBox x:Name="CbCarType" Grid.Column="5" FontSize="16" HorizontalAlignment="Center" Margin="0,6,0,0" Grid.Row="1" VerticalAlignment="Top" Width="228" Height="25"/>
                <ComboBox x:Name="CbStatusList" Grid.Column="3" HorizontalAlignment="Center" Margin="0,12,0,0" VerticalAlignment="Top" Width="225" Height="29" FontSize="16" SelectedIndex="0">
                    <ComboBoxItem Content="Waiting"/>
                    <ComboBoxItem Content="Booked"/>
                    <ComboBoxItem Content="Maintain"/>
                </ComboBox>
                <ComboBox x:Name="CbCateList" Grid.Column="5" HorizontalAlignment="Left" Margin="20,12,0,0" VerticalAlignment="Top" Width="225" Height="28" FontSize="16"/>
                <Label Content="Active" HorizontalAlignment="Center" VerticalAlignment="Top" Width="116" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="2" Height="31" Margin="0,40,0,0"/>
                <CheckBox x:Name="inputActive" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="19,51,0,0" Grid.Row="2" VerticalAlignment="Top" FontSize="16"/>




            </Grid>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="26*"/>
                <RowDefinition Height="185*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140*"/>
                    <ColumnDefinition Width="140*"/>
                    <ColumnDefinition Width="140*"/>
                    <ColumnDefinition Width="140*"/>
                    <ColumnDefinition Width="838*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Center" Height="31" Width="120" FontSize="16" Click="btnSaveCar"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="42*"/>
                    <ColumnDefinition Width="64*"/>
                    <ColumnDefinition Width="116*"/>
                    <ColumnDefinition Width="150*"/>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="114*"/>
                    <ColumnDefinition Width="95*"/>
                    <ColumnDefinition Width="90*"/>
                    <ColumnDefinition Width="107*"/>
                    <ColumnDefinition Width="122*"/>
                    <ColumnDefinition Width="124*"/>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="77*"/>
                    <ColumnDefinition Width="169*"/>
                </Grid.ColumnDefinitions>
                <Label Content="No." HorizontalAlignment="Center" VerticalAlignment="Center" Width="42" FontSize="16" HorizontalContentAlignment="Center" Height="31"/>
                <Label Content="Model" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="3" Height="31"/>
                <Label Content="Color" HorizontalAlignment="Center" VerticalAlignment="Center" Width="66" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="4" Height="31"/>
                <Label Content="License plate" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="5" Height="31"/>
                <Label Content="Seat count" HorizontalAlignment="Center" VerticalAlignment="Center" Width="94" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="6" Height="31"/>
                <Label Content="Status" HorizontalAlignment="Center" VerticalAlignment="Center" Width="86" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="7" Height="31"/>
                <Label Content="Category" HorizontalAlignment="Center" VerticalAlignment="Center" Width="106" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="8" Height="31"/>
                <Label Content="Car Type" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="9" Height="31"/>
                <Label Content="Price per Day" HorizontalAlignment="Center" VerticalAlignment="Center" Width="122" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="10" Height="31"/>
                <Label Content="Image" HorizontalAlignment="Center" VerticalAlignment="Center" Width="76" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="12" Height="31"/>
                <Label Content="Action" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="13" Height="31"/>
                <Label Content="Car ID" HorizontalAlignment="Center" VerticalAlignment="Center" Width="64" FontSize="16" HorizontalContentAlignment="Center" Height="31" Grid.Column="1"/>
                <Label x:Name="inputCarId_Copy" Content="Brand" HorizontalAlignment="Center" VerticalAlignment="Center" Width="116" FontSize="16" HorizontalContentAlignment="Center" Height="31" Grid.Column="2"/>
                <Label Content="Active" HorizontalAlignment="Center" VerticalAlignment="Center" Width="64" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="11" Height="31"/>

            </Grid>
            <ScrollViewer   VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Auto"
                            Grid.Row="2">
                <Grid Grid.Row="2" x:Name="Cars">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="42*"/>
                        <ColumnDefinition Width="64*"/>
                        <ColumnDefinition Width="116*"/>
                        <ColumnDefinition Width="150*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="114*"/>
                        <ColumnDefinition Width="95*"/>
                        <ColumnDefinition Width="90*"/>
                        <ColumnDefinition Width="107*"/>
                        <ColumnDefinition Width="122*"/>
                        <ColumnDefinition Width="124*"/>
                        <ColumnDefinition Width="65*"/>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="169*"/>

                    </Grid.ColumnDefinitions>

                </Grid>
            </ScrollViewer>


        </Grid>



    </Grid>
</UserControl>
