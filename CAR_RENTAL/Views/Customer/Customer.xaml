<UserControl x:Class="CAR_RENTAL.Views.Customer.Customer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAR_RENTAL.Views.Customer"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="263*"/>
            <RowDefinition Height="437*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="97*"/>
                <ColumnDefinition Width="216*"/>
                <ColumnDefinition Width="97*"/>
                <ColumnDefinition Width="217*"/>
                <ColumnDefinition Width="873*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="58*"/>
            </Grid.RowDefinitions>
            <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="32"/>
            <Label Content="Email" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="1"/>
            <Label Content="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="2"/>
            <Label Content="Phone" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="3"/>
            <Label Content="ID Number" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Row="4"/>
            <TextBox x:Name="inputName" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="32" FontSize="16"/>
            <TextBox x:Name="inputEmail" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="32" FontSize="16" Grid.Row="1"/>
            <TextBox x:Name="inputPassword" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="32" FontSize="16" Grid.Row="2"/>
            <TextBox x:Name="inputPhone" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="32" FontSize="16" Grid.Row="3"/>
            <TextBox x:Name="inputIdCard" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="32" FontSize="16" Grid.Row="4"/>
            <Label Content="Address" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Column="2"/>
            <Label Content="City" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Column="2" Grid.Row="1"/>
            <Label Content="District" HorizontalAlignment="Center" VerticalAlignment="Top" Width="96" FontSize="16" HorizontalContentAlignment="Right" Height="32" Grid.Column="2" Grid.Row="2"/>
            <TextBox x:Name="inputAddress" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Height="32" FontSize="16"/>
            <ComboBox x:Name="inputCityId" SelectionChanged="inputCityId_changed" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Top" Width="216" FontSize="16"/>
            <ComboBox x:Name="inputDistrictId" Grid.Column="3" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Width="216" FontSize="16"/>
            <Button Grid.Column="3" Content="Add" HorizontalAlignment="Left" Margin="10,7,0,0" Grid.Row="3" VerticalAlignment="Top" FontSize="16" Width="68" Height="34" Click="btnSaveCustomer"/>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40*"/>
                <RowDefinition Height="397*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45*"/>
                    <ColumnDefinition Width="125*"/>
                    <ColumnDefinition Width="152*"/>
                    <ColumnDefinition Width="128*"/>
                    <ColumnDefinition Width="141*"/>
                    <ColumnDefinition Width="126*"/>
                    <ColumnDefinition Width="318*"/>
                    <ColumnDefinition Width="133*"/>
                    <ColumnDefinition Width="334*"/>
                </Grid.ColumnDefinitions>
                <Label Content="No." HorizontalAlignment="Center" VerticalAlignment="Center" Width="42" FontSize="16" HorizontalContentAlignment="Center" Height="32"/>
                <Label Content="ID Number" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="2" Height="32"/>
                <Label Content="Email" HorizontalAlignment="Center" VerticalAlignment="Center" Width="127" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="3" Height="32"/>
                <Label Content="Password" HorizontalAlignment="Center" VerticalAlignment="Center" Width="137" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="4" Height="32"/>
                <Label Content="Phone Contact" HorizontalAlignment="Center" VerticalAlignment="Center" Width="126" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="5" Height="32"/>
                <Label Content="Address" HorizontalAlignment="Center" VerticalAlignment="Center" Width="318" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="6" Height="32"/>
                <Label Content="Active" HorizontalAlignment="Center" VerticalAlignment="Center" Width="133" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="7" Height="32"/>
                <Label Content="Action" HorizontalAlignment="Center" VerticalAlignment="Center" Width="333" FontSize="16" HorizontalContentAlignment="Center" Grid.Column="8" Height="32"/>
                <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center" Width="125" FontSize="16" HorizontalContentAlignment="Center" Height="32" Grid.Column="1"/>
            </Grid>

            <ScrollViewer   VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                Grid.Row="1">
                <Grid Grid.Row="2" x:Name="Customers">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45*"/>
                        <ColumnDefinition Width="125*"/>
                        <ColumnDefinition Width="152*"/>
                        <ColumnDefinition Width="128*"/>
                        <ColumnDefinition Width="141*"/>
                        <ColumnDefinition Width="126*"/>
                        <ColumnDefinition Width="318*"/>
                        <ColumnDefinition Width="133*"/>
                        <ColumnDefinition Width="334*"/>
                    </Grid.ColumnDefinitions>
                    

                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
