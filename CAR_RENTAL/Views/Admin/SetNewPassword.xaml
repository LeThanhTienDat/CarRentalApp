<Window x:Class="CAR_RENTAL.Views.Admin.SetNewPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENTAL.Views.Admin"
        mc:Ignorable="d"
        Title="SetNewPassword" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="359*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="120*"/>
                <RowDefinition Height="239*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="153*"/>
                <ColumnDefinition Width="347*"/>
            </Grid.ColumnDefinitions>
            <Label Content="New Password" HorizontalAlignment="Center" Margin="0,79,0,0" VerticalAlignment="Top" FontSize="16" HorizontalContentAlignment="Right" Width="134" Height="31"/>
            <Label Content="Confirm" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="16" HorizontalContentAlignment="Right" Width="134" Height="31" Grid.Row="1"/>
            <PasswordBox x:Name="inputNewPassword" Grid.Column="1" FontSize="16" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" Width="216"/>
            <PasswordBox x:Name="inputReNewPassword" Grid.Column="1" FontSize="16" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="216" Grid.Row="1"/>

        </Grid>


        <Grid Margin="0,359,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Confirm" Margin="118,10,22,19" FontSize="16" Click="UpdateNewPassword"/>
            <Button Content="Cancel" Margin="22,10,118,19" FontSize="16" Grid.Column="1"/>

        </Grid>
    </Grid>
</Window>
