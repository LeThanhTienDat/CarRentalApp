<UserControl x:Class="CAR_RENTAL.Views.Report.CarReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAR_RENTAL.Views.Report"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="361*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="190*"/>
            <ColumnDefinition Width="217*"/>
            <ColumnDefinition Width="172*"/>
            <ColumnDefinition Width="921*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Total car" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center" Height="36" Width="146" FontSize="16" HorizontalContentAlignment="Right"/>
        <Label Content="On Hiring" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center" Height="36" Width="146" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="1"/>
        <Label Content="Waiting for Hire" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center" Height="36" Width="146" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="2"/>
        <Label Content="Maintaining" HorizontalAlignment="Left" Margin="34,5,0,0" VerticalAlignment="Top" Height="36" Width="146" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="3"/>
        <Label Content="Deactive" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center" Height="36" Width="146" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="4"/>
        <Label Content="Most Rented" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" Height="36" Width="152" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="2"/>
        <Label Content="Least rented" HorizontalAlignment="Center" VerticalAlignment="Top" Height="36" Width="152" FontSize="16" HorizontalContentAlignment="Right" Grid.Column="2" Grid.Row="2" Margin="0,5,0,0"/>
        <TextBlock x:Name="showTotalCar" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="194" Height="29"/>
        <TextBlock x:Name="showOnHiring" Grid.Column="1" HorizontalAlignment="Left" Margin="10,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Width="194" Height="29" Grid.Row="1"/>
        <TextBlock x:Name="showWaiting" Grid.Column="1" HorizontalAlignment="Left" Margin="10,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Width="194" Height="29" Grid.Row="2"/>
        <TextBlock x:Name="showMaintaining" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="194" Height="29" Grid.Row="3"/>
        <TextBlock x:Name="showDeactive" Grid.Column="1" HorizontalAlignment="Left" Margin="10,7,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Width="194" Height="29" Grid.Row="4"/>
        <TextBlock x:Name="showMostRented" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="194" Height="29" Grid.Row="5"/>
        <TextBlock x:Name="showLeastRented" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="194" Height="29" Grid.Row="6"/>
        <Grid x:Name="mostRentedCar" Grid.Row=" 0" Grid.Column="3" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="97*"/>
                <ColumnDefinition Width="140*"/>
                <ColumnDefinition Width="118*"/>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="116*"/>
                <ColumnDefinition Width="108*"/>
                <ColumnDefinition Width="162*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="24*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Label Content="Car Id" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="97" HorizontalContentAlignment="Center" Height="32"/>
            <Label Content="License plate" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="140" HorizontalContentAlignment="Center" Grid.Column="1" Height="32"/>
            <Label Content="Brand" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="118" HorizontalContentAlignment="Center" Grid.Column="2" Margin="0,7,0,0" Height="31"/>
            <Label Content="Model" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="180" HorizontalContentAlignment="Center" Grid.Column="3" Margin="0,7,0,0" Height="31"/>
            <Label Content="Rental count" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="116" HorizontalContentAlignment="Center" Grid.Column="4" Margin="0,7,0,0" Height="31"/>
            <Label Content="category" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="108" HorizontalContentAlignment="Center" Grid.Column="5" Margin="0,7,0,0" Height="31"/>
            <Label Content="Car Type" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="108" HorizontalContentAlignment="Center" Grid.Column="6" Margin="10,0,0,0" Height="31"/>

        </Grid>
        <Grid x:Name="leastRentedCar" Grid.Row="2" Grid.Column="3" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="49*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="97*"/>
                <ColumnDefinition Width="140*"/>
                <ColumnDefinition Width="118*"/>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="116*"/>
                <ColumnDefinition Width="108*"/>
                <ColumnDefinition Width="162*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Car Id" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="97" HorizontalContentAlignment="Center" Height="32"/>
            <Label Content="License plate" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Width="140" HorizontalContentAlignment="Center" Grid.Column="1" Height="32"/>
            <Label Content="Brand" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="118" HorizontalContentAlignment="Center" Grid.Column="2" Margin="0,7,0,0" Height="31"/>
            <Label Content="Model" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="180" HorizontalContentAlignment="Center" Grid.Column="3" Margin="0,7,0,0" Height="31"/>
            <Label Content="Rental count" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="116" HorizontalContentAlignment="Center" Grid.Column="4" Margin="0,7,0,0" Height="31"/>
            <Label Content="category" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="108" HorizontalContentAlignment="Center" Grid.Column="5" Margin="0,7,0,0" Height="31"/>
            <Label Content="Car Type" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" Width="108" HorizontalContentAlignment="Center" Grid.Column="6" Margin="10,0,0,0" Height="31"/>

        </Grid>
    </Grid>
</UserControl>
