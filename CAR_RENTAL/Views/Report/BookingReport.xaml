<UserControl x:Class="CAR_RENTAL.Views.Report.BookingReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAR_RENTAL.Views.Report"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="215*"/>
            <RowDefinition Height="127*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="476*"/>
                <ColumnDefinition Width="476*"/>
                <ColumnDefinition Width="513*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="211*"/>
            </Grid.RowDefinitions>
            <Label Content="Daily Revenue" HorizontalAlignment="Left" VerticalAlignment="Center" Width="178" FontSize="16" HorizontalContentAlignment="Right" Height="31"/>
            <Label Content="Monthly Revenue" HorizontalAlignment="Left" VerticalAlignment="Center" Width="178" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Row="1"/>
            <DatePicker SelectedDateChanged="Reload" x:Name="chosenDailyRevenue" HorizontalAlignment="Left" Margin="365,0,0,0" VerticalAlignment="Center" Height="24" Width="102"/>
            <TextBlock x:Name="showDailyRevenue" HorizontalAlignment="Left" Margin="184,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="176" Height="24"/>
            <TextBlock x:Name="showMonthlyRevenue" HorizontalAlignment="Left" Margin="184,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="176" Height="24" Grid.Row="1"/>
            <Label Content="Daily Booking" HorizontalAlignment="Left" VerticalAlignment="Center" Width="178" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Row="2"/>
            <Label Content="Monthly Booking" HorizontalAlignment="Left" VerticalAlignment="Center" Width="178" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Row="3"/>
            <TextBlock x:Name="showDailyBooking" HorizontalAlignment="Left" Margin="184,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="176" Height="24" Grid.Row="2"/>
            <DatePicker x:Name="chosenDailyBooking" SelectedDateChanged="Reload" HorizontalAlignment="Left" Margin="365,0,0,0" VerticalAlignment="Center" Grid.Row="2" Height="24" Width="102"/>
            <TextBlock x:Name="showMonthlyBooking" HorizontalAlignment="Left" Margin="184,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="176" Height="24" Grid.Row="3"/>
            <Label Content="Booking Canceled" HorizontalAlignment="Left" VerticalAlignment="Center" Width="178" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Row="4"/>
            <ComboBox x:Name="inputChoseMonthRevenue" SelectionChanged="Reload"  HorizontalAlignment="Left" Margin="365,1,0,0" Grid.Row="1" VerticalAlignment="Top" Width="102" FontSize="16"/>
            <ComboBox x:Name="inputChoseMonthBooking" SelectionChanged="Reload" HorizontalAlignment="Left" Margin="365,0,0,0" Grid.Row="3" VerticalAlignment="Center" Width="102" FontSize="16"/>
            <Label Content="Booking Processing" HorizontalAlignment="Left" VerticalAlignment="Center" Width="178" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Row="5"/>
            <TextBlock x:Name="showBookingCanceled" HorizontalAlignment="Left" Margin="184,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="176" Height="24" Grid.Row="4"/>
            <TextBlock x:Name="showBookingProcessing" HorizontalAlignment="Left" Margin="184,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="16" Width="176" Height="24" Grid.Row="5"/>
            <Label Content="Booking Completed" HorizontalAlignment="Left" VerticalAlignment="Top" Width="178" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Row="5" Margin="0,32,0,0" Grid.RowSpan="2"/>
            <TextBlock x:Name="showBookingCompleted" HorizontalAlignment="Left" Margin="184,3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Width="176" Height="24" Grid.Row="6"/>
            <Label Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Width="178" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.ColumnSpan="2" Margin="487,0,0,0" Grid.Row="2"/>
        </Grid>

        <Grid Margin="0,440,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="53*"/>
            </Grid.RowDefinitions>
            <Label Content="Type of Booking" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="16" Width="126" HorizontalContentAlignment="Center"/>
            <ComboBox SelectionChanged="ChangeTypeBooking" SelectedIndex="0" x:Name="choseTypeBooking" HorizontalAlignment="Left" Margin="141,0,0,0" VerticalAlignment="Center" Width="165" Height="28" FontSize="16">
                <ComboBoxItem Content="Waiting"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="Canceled"/>
            </ComboBox>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="43*"/>
                    <RowDefinition Height="169*"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" x:Name="BookingLabels">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60*"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="129*"/>
                        <ColumnDefinition Width="120*"/>
                        <ColumnDefinition Width="127*"/>
                        <ColumnDefinition Width="146*"/>
                        <ColumnDefinition Width="134*"/>
                        <ColumnDefinition Width="127*"/>
                        <ColumnDefinition Width="142*"/>
                        <ColumnDefinition Width="414*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="No." HorizontalAlignment="Center" VerticalAlignment="Center" Width="52" Height="26" HorizontalContentAlignment="Center"/>
                    <Label Content="Customer name" HorizontalAlignment="Center" VerticalAlignment="Center" Width="109" Height="26" Grid.Column="2" HorizontalContentAlignment="Center"/>
                    <Label Content="Phone" HorizontalAlignment="Center" VerticalAlignment="Center" Width="107" Height="26" Grid.Column="4" HorizontalContentAlignment="Center"/>
                    <Label Content="Car Amount" HorizontalAlignment="Center" VerticalAlignment="Center" Width="127" Height="26" HorizontalContentAlignment="Center" Grid.Column="5"/>
                    <Label Content="Booking date" HorizontalAlignment="Center" VerticalAlignment="Center" Width="115" Height="26" HorizontalContentAlignment="Center" Grid.Column="6"/>
                    <Label Content="Id Card Number" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="26" Grid.Column="3" HorizontalContentAlignment="Center"/>
                    <Label Content="Booking ID" HorizontalAlignment="Center" VerticalAlignment="Center" Width="80" Height="26" HorizontalContentAlignment="Center" Grid.Column="1"/>
                    <Label Content="Booking Status" HorizontalAlignment="Center" VerticalAlignment="Center" Width="127" Height="26" HorizontalContentAlignment="Center" Grid.Column="7"/>
                    <Grid Grid.Column="8" x:Name="completeOrCancelDate">
                        
                    </Grid>
                    <Grid Grid.Column="9" x:Name="reasonCancel">
                        
                    </Grid>
                </Grid>
                <ScrollViewer   VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                Grid.Row="1">
                    <Grid Grid.Row="1" x:Name="Bookings">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60*"/>
                            <ColumnDefinition Width="100*"/>
                            <ColumnDefinition Width="129*"/>
                            <ColumnDefinition Width="120*"/>
                            <ColumnDefinition Width="127*"/>
                            <ColumnDefinition Width="146*"/>
                            <ColumnDefinition Width="134*"/>
                            <ColumnDefinition Width="127*"/>
                            <ColumnDefinition Width="142*"/>
                            <ColumnDefinition Width="414*"/>
                        </Grid.ColumnDefinitions>


                    </Grid>
                </ScrollViewer>
            </Grid>

        </Grid>
    </Grid>
</UserControl>
