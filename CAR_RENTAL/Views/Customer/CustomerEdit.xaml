<Window x:Class="CAR_RENTAL.Views.Customer.CustomerEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENTAL.Views.Customer"
        mc:Ignorable="d"
        Title="CustomerEdit" Height="350" Width="600"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="401*"/>
                <ColumnDefinition Width="400*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Save Edit" FontSize="18" Grid.Column="0" Margin="162,14,22,13" Click="btnSaveEdit"/>
            <Button Content="Cancel" FontSize="18" Grid.Column="1" Margin="22,14,150,13" Click="btnCancelEdit"/>
        </Grid>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32*"/>
                <ColumnDefinition Width="68*"/>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="69*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="55*"/>
            </Grid.RowDefinitions>
            <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Top" Width="86" FontSize="16" HorizontalContentAlignment="Right" Height="31"/>
            <Label Content="Email" HorizontalAlignment="Center" VerticalAlignment="Top" Width="86" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="1" Height="31"/>
            <Label Content="Password" HorizontalAlignment="Center" VerticalAlignment="Top" Width="86" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="2" Height="31"/>
            <Label Content="Phone" HorizontalAlignment="Center" VerticalAlignment="Top" Width="86" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="3" Height="31"/>
            <Label Content="ID Number" HorizontalAlignment="Center" VerticalAlignment="Top" Width="93" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2"/>
            <TextBox x:Name="editName" Grid.Column="1" HorizontalAlignment="Left" Margin="0,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="16" Height="27"/>
            <TextBox x:Name="editEmail" Grid.Column="1" HorizontalAlignment="Left" Margin="0,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="16" Height="27" Grid.Row="1"/>
            <TextBox x:Name="editPassword" Grid.Column="1" HorizontalAlignment="Left" Margin="0,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="16" Height="27" Grid.Row="2"/>
            <TextBox x:Name="editPhone" Grid.Column="1" HorizontalAlignment="Left" Margin="0,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="16" Height="27" Grid.Row="3"/>
            <TextBox x:Name="editAddress" Grid.Column="3" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="16" Height="27" Grid.Row="1" Margin="0,2,0,0"/>
            <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Top" Width="86" FontSize="16" HorizontalContentAlignment="Right" Height="31"/>
            <Label Content="Address" HorizontalAlignment="Center" VerticalAlignment="Top" Width="93" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Grid.Row="1"/>
            <TextBox x:Name="editIdNumber" Grid.Column="3" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="16" Height="27" Margin="0,4,0,0"/>
            <Label Content="City" HorizontalAlignment="Center" VerticalAlignment="Top" Width="92" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Grid.Row="1" Margin="0,55,0,0" Grid.RowSpan="2"/>
            <Label Content="District" HorizontalAlignment="Center" VerticalAlignment="Top" Width="93" FontSize="16" HorizontalContentAlignment="Right" Height="31" Grid.Column="2" Grid.Row="3"/>
            <ComboBox x:Name="editCityId" SelectionChanged="editCityId_changed" Grid.Column="2" HorizontalAlignment="Left" Margin="92,4,0,0" Grid.Row="2" VerticalAlignment="Top" Width="195" Grid.ColumnSpan="2" Height="27" FontSize="16"/>
            <ComboBox x:Name="editDistrictId" Grid.Column="3" HorizontalAlignment="Left" Margin="0,4,0,0" Grid.Row="3" VerticalAlignment="Top" Width="195" Height="27" FontSize="16"/>
            <Label Content="Active" HorizontalAlignment="Center" VerticalAlignment="Top" Width="86" FontSize="16" HorizontalContentAlignment="Right" Grid.Row="4" Height="31"/>
            <CheckBox x:Name="editActive" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Top" FontSize="16"/>

        </Grid>
    </Grid>
</Window>
