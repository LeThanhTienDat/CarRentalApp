<UserControl x:Class="CAR_RENTAL.Views.Report.CustomerReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CAR_RENTAL.Views.Report"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="353*"/>
            <RowDefinition Height="347*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="55*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="174*"/>
            </Grid.RowDefinitions>
            <Label Content="Total Customer" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" HorizontalContentAlignment="Right" FontSize="16" Height="31"/>
            <Label Content="Total New (Date)" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" HorizontalContentAlignment="Right" FontSize="16" Height="31" Grid.Row="1"/>
            <Label Content="Total New (Month)" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" HorizontalContentAlignment="Right" FontSize="16" Height="31" Grid.Row="2"/>
            <ComboBox x:Name="choseMonth" SelectionChanged="Reload" Grid.Column="2" HorizontalAlignment="Left" FontSize="16" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="136"/>
            <DatePicker x:Name="choseDate" SelectedDateChanged="Reload" Grid.Column="2" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="136"/>
            <Label Content="Total Active" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" HorizontalContentAlignment="Right" FontSize="16" Height="31" Grid.Row="3"/>
            <Label Content="Total DeActive" HorizontalAlignment="Center" VerticalAlignment="Center" Width="160" HorizontalContentAlignment="Right" FontSize="16" Height="31" Grid.Row="4"/>
            <TextBlock x:Name="showTotalCus" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="16" Width="200" Height="31" Margin="0,8,0,0" Grid.RowSpan="2"/>
            <TextBlock x:Name="showTotalNewDate" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="16" Width="200" Height="31" Margin="0,8,0,0" Grid.RowSpan="2" Grid.Row="1"/>
            <TextBlock x:Name="showTotalActive" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="16" Width="200" Height="31" Margin="0,8,0,0" Grid.RowSpan="2" Grid.Row="3"/>
            <TextBlock x:Name="showTotalNewMonth" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="16" Width="200" Height="31" Margin="0,7,0,0" Grid.RowSpan="2" Grid.Row="2"/>
            <TextBlock x:Name="showTotalDeactive" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="16" Width="200" Height="31" Margin="0,7,0,0" Grid.RowSpan="2" Grid.Row="4"/>

        </Grid>
        <Grid Grid.Row="1">

        </Grid>

    </Grid>
</UserControl>
