<Window x:Class="CAR_RENTAL.Views.Guest.Guest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENTAL.Views.Guest"
        mc:Ignorable="d"
        Title="Guest" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="23*"/>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="31*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="161*"/>
                <ColumnDefinition Width="239*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Phone Number" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Height="31"/>
            <Label Content="ID Card Number" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="142" FontSize="16" HorizontalContentAlignment="Right" Height="31"/>
            <TextBox x:Name="inputPhone" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="198" FontSize="16" Height="31"/>
            <TextBox x:Name="inputIdCard" Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="198" FontSize="16" Height="31"/>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Login" IsDefault="true" HorizontalAlignment="Left" Margin="70,0,0,0" VerticalAlignment="Center" FontSize="16" Width="108" Height="37" Click="LoginGuest"/>
            <Button Content="Cancel" HorizontalAlignment="Left" Margin="18,0,0,0" VerticalAlignment="Center" FontSize="16" Width="108" Height="37" Grid.Column="1" Click="CancelLogin"/>

        </Grid>
    </Grid>
</Window>
