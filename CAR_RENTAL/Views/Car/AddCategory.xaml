<Window x:Class="CAR_RENTAL.Views.Car.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENTAL.Views.Car"
        mc:Ignorable="d"
        Title="AddCategory" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="48*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="53*"/>
                <RowDefinition Height="105*"/>
                <RowDefinition Height="52*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="27*"/>
                <ColumnDefinition Width="73*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Name" HorizontalAlignment="Left" Margin="22,15,0,0" VerticalAlignment="Top" FontSize="16" Width="76" HorizontalContentAlignment="Right" Height="29"/>
            <Label Content="Active" HorizontalAlignment="Left" Margin="22,5,0,0" VerticalAlignment="Top" FontSize="16" Width="76" HorizontalContentAlignment="Right" Grid.Row="2" Height="29"/>
            <CheckBox x:Name="inputActive" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,12,0,0" Grid.Row="2" VerticalAlignment="Top" Height="18" Width="22"/>
            <TextBox x:Name="inputName" Grid.Column="1" HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" FontSize="16" Height="30"/>
            <Label Content="Description" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="16" Width="88" HorizontalContentAlignment="Right" Height="29" Grid.Row="1"/>
            <TextBox x:Name="inputDescription" AcceptsReturn="True" Grid.Column="1" HorizontalAlignment="Left" Margin="10,14,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="81"/>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200*"/>
                <ColumnDefinition Width="201*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Create" HorizontalAlignment="Left" Margin="102,6,0,0" VerticalAlignment="Top" FontSize="16" Width="88" Click="ConfirmAddCategory"/>
            <Button Content="Cancel" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" FontSize="16" Width="88" Grid.Column="1" Click="CloseAddCategory"/>

        </Grid>
    </Grid>
</Window>
