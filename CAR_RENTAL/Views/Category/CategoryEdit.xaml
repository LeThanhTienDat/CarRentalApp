<Window x:Class="CAR_RENTAL.Views.Category.CategoryEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CAR_RENTAL.Views.Category"
        mc:Ignorable="d"
        Title="CategoryEdit" Height="300" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="111*"/>
                <ColumnDefinition Width="139*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="66*"/>
                    <RowDefinition Height="66*"/>
                    <RowDefinition Height="85*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="91*"/>
                    <ColumnDefinition Width="242*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Title" HorizontalAlignment="Center" VerticalAlignment="Top" Width="71" FontSize="16" HorizontalContentAlignment="Right" Margin="0,7,0,0"/>
                <Label Content="Active" HorizontalAlignment="Center" VerticalAlignment="Top" Width="71" FontSize="16" HorizontalContentAlignment="Right" Margin="0,5,0,0" Grid.Row="1"/>
                <CheckBox x:Name="editActive" Grid.Column="1" Content="" HorizontalAlignment="Left" Margin="10,13,0,0" Grid.Row="1" VerticalAlignment="Top" Width="28" Height="15"/>
                <TextBox x:Name="editTitle" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" FontSize="16" Height="26"/>

            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="102*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Description" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="16" HorizontalContentAlignment="Right" Width="90" Height="31"/>
                <TextBox x:Name="editDescription" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="286" FontSize="16" Height="130"/>

            </Grid>

        </Grid>
        <Grid HorizontalAlignment="Left" Margin="0,214,0,0" Grid.RowSpan="2" Width="750">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="251*"/>
                <ColumnDefinition Width="249*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Save Edit" Grid.Column="0" Click="btnSaveEdit" Margin="206,19,28,19"/>
            <Button Content="Cancel" Click="btnCancelEdit" HorizontalAlignment="Left" Margin="28,19,0,19" Width="158" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
